{
	"name": "noname-{{cookiecutter.language_slug}}",
	"displayName": "NoName for {{cookiecutter.language_name}}",
	"description": "Language support for {{cookiecutter.language_name}}.",
	"author": "{{cookiecutter.author}}",
	"license": "MIT",
	"publisher": "{{cookiecutter.publisher}}",
	"version": "0.1.5",
	"categories": [],
	"keywords": [
		"{{cookiecutter.language_name}}",
		"{{cookiecutter.language_slug}}",
        "noname"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:{{cookiecutter.language_slug}}"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configurationDefaults": {
			"[{{cookiecutter.language_slug}}]": {
				"files.eol": "\n"
			}
		},
		"languages": [
			{
				"id": "{{cookiecutter.language_slug}}",
				"aliases": [
					"{{cookiecutter.language_name}}"
				],
				"extensions": [
					".{{cookiecutter.file_extension}}"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "NoName for {{cookiecutter.language_name}}",
			"properties": {
				"noname-{{cookiecutter.language_slug}}.language_server.path": {
					"scope": "resource",
					"type": "string",
					"description": "Path to language server executable.",
					"format": "path"
				},
				"noname-{{cookiecutter.language_slug}}.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"axios": "^1.4.0",
		"mkdirp": "^3.0.1"
	}
}
